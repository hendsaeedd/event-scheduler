<style>
  label,
  h1 {
    font-weight: bold;
    color: #fff;
  }
</style>
<div class="container">
  <div class="row mt-4">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <h1 class="display-4">Profile</h1>
      <hr />

      <%- include('../partials/flashMessages') -%>

      <form
        action="/users/uploadAvatar"
        method="POST"
        enctype="multipart/form-data"
      >
        <input type="file" name="avatar" id="avatar" onchange="readURL(this)" />
        <button type="submit" class="btn btn-primary">Upload</button>
      </form>
      <hr />
      <h1 class="display-4">Image Preivew</h1>
      <img
        src="#"
        alt=""
        id="imagePlaceholder"
        height="200px"
        width="200px"
        style="display: none"
      />
    </div>
  </div>
</div>

