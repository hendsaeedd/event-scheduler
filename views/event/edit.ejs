<%- include('../partials/header') -%> <%- include('../partials/navbar') -%>
<style>
  label {
    font-weight: bold;
    color: #fff;
  }
</style>
<div class="container">
  <div class="row mt-4">
    <h1 class="mt-4 text-primary">Edit new event</h1>
    <hr />

    <% if (errors) {%> <% errors.forEach((err)=> {%>
    <div class="alert alert-danger col-md-9 offset-md-3"><%= err.msg%></div>
    <%})%> <%}%>

    <div class="col-md-9 offset-md-3">
      <form action="/events/update" method="post">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            id="tile"
            class="form-control"
            value="<%= event.title %>"
          />
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" rows="4" class="form-control"><%= event.description %></textarea>
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          <input
            type="text"
            name="location"
            id="location"
            class="form-control"
            value="<%= event.location %>"
          />
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          <input
            type="date"
            name="date"
            id="date"
            class="form-control"
            value="<%= event.date.toISOString().substr(0,10) %>"
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary mt-3">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') -%>
